{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },

    "include": ["*/src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.tests.ts"]
}
